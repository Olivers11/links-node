<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/editing/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value=" {{links.title}} " name="title" autofocus id="" placeholder="Titulo" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" value=" {{links.url}} " id="" placeholder="URL" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea  name="description" aria-valuetext="" placeholder="Descripcion" id="" cols="40" rows="10">{{links.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar"  class="btn btn-primary btn-block">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>